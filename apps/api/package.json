{
    "name": "api",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "rimraf dist && nest build --webpack",
        "start": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "lint": "eslint --quiet \"**/*.ts\"",
        "lint:fix": "eslint \"**/*.ts\" --fix",
        "prettier": "prettier --list-different \"**/*.ts\"",
        "prettier:fix": "prettier --write \"**/*.ts\"",
        "format": "npm run lint:fix && npm run prettier:fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
    },
    "dependencies": {
        "@apollo/server": "^4.9.3",
        "@apollo/subgraph": "2.5.5",
        "@as-integrations/fastify": "^2.1.0",
        "@faker-js/faker": "^8.1.0",
        "@nestjs/apollo": "12.0.9",
        "@nestjs/axios": "^3.0.1",
        "@nestjs/common": "10.2.6",
        "@nestjs/config": "3.1.1",
        "@nestjs/core": "10.2.6",
        "@nestjs/graphql": "12.0.9",
        "@nestjs/jwt": "^10.1.1",
        "@nestjs/passport": "^10.0.2",
        "@nestjs/platform-express": "10.2.6",
        "@nestjs/terminus": "10.1.1",
        "@prisma/client": "5.3.1",
        "axios": "^1.4.0",
        "bcryptjs": "^2.4.3",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.0",
        "express": "^4.18.2",
        "graphql": "16.8.1",
        "helmet": "^7.0.0",
        "passport-jwt": "^4.0.1",
        "passport-magic-login": "^1.2.2",
        "prisma-nestjs-graphql": "^19.2.0",
        "reflect-metadata": "0.1.13",
        "resend": "^3.1.0",
        "rimraf": "5.0.4",
        "rxjs": "7.8.1",
        "source-map-support": "^0.5.21",
        "uuid": "^9.0.1",
        "zustand": "^4.4.1",
        "@react-email/components": "0.0.16",
        "react-email": "2.1.1"
    },
    "devDependencies": {
        "@nestjs/cli": "10.1.18",
        "@nestjs/schematics": "10.0.2",
        "@types/express": "4.17.18",
        "@types/node": "20.7.0",
        "@types/react": "^18.0.22",
        "@typescript-eslint/eslint-plugin": "6.7.3",
        "@typescript-eslint/parser": "6.7.3",
        "copy-webpack-plugin": "^11.0.0",
        "eslint": "8.50.0",
        "eslint-config-prettier": "9.0.0",
        "jest": "29.7.0",
        "prettier": "3.0.3",
        "prisma": "5.3.1",
        "ts-jest": "29.1.1",
        "ts-loader": "^9.4.4",
        "ts-node": "10.9.1",
        "typescript": "5.2.2",
        "webpack": "^5.88.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "prisma": {
        "schema": "prisma/schema.prisma",
        "seed": "ts-node prisma/tools/seed.ts"
    }
}
